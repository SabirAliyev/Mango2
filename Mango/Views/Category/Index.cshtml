@model IEnumerable<Mango.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cargory List</h2>
        </div>
        <div class="col-6 text-lg-end"> 
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" >
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0) {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model) {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.DisplayOrder</td>
                        <td class="text-center">
                            <div class="btn-group w-75" role="group">
                                @*Using tag helper (asp-route-Id="@obj.Id") to get item by ID*@
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                @*Using tag helper (asp-route-Id="@obj.Id") to get item by ID*@
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else {
        <p> No category </p>
    }

</div>

