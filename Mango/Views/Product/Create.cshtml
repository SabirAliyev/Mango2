@model Mango.Models.Product

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        @*Using tag helpers for Create method*@
                        <input asp-for="Name" class="form-control" />
                    </div>


                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        @*Using tag helpers for Create method*@
                        <input asp-for="Description" class="form-control" />
                    </div>


                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-2">
                        @*Using tag helpers for Create method*@
                        <input asp-for="Status" class="form-control" />
                    </div>


                </div>
                <div class="form-text"></div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa-solid fa-right-from-bracket"></i>&nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>

    </div>

</form>

